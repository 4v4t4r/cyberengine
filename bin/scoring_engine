#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'scoring_engine'

config = ScoringEngine::Config.new("#{File.dirname(__FILE__)}/../config.yaml")

unless config["checks_location"]
  raise ScoringEngine::Exceptions::ConfigValueNotFound.new("checks_location")
end

engine = ScoringEngine::Engine.new(config["checks_location"])
engine.start("google.com")