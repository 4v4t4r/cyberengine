<% content_for :actions do %>
  <li class='submit'>
    <%= link_to '#', onclick: "$('#edit_server_#{@server.id}').trigger('submit')" do %><i class="icon-ok-sign"></i><span>Update</span><% end %>
  </li>
  <li class='cancel'>
    <%= link_to team_server_path(@team,@server) do %><i class="icon-ban-circle"></i><span>Cancel</span><% end %>
  </li>
<% end %>


<div class="page-header">
  <h3><%= @server.name %></h3>
</div>

<%= render partial: 'form' %>
