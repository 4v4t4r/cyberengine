<%= form_for @server, html: { class: 'form-horizontal' } do |f| %>
  <% if @server.errors.any? %>
    <% flash[:error] = @server.errors.full_messages.to_s %>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'text_field', autofocus: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :team_id, class: 'control-label' %>
    <div class="controls">
      <%= select(:server, :team_id, Team.all.collect { |t| [t.name, t.id] }, { prompt: 'Select Team' }) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', servers_path, class: 'btn' %>
  </div>
<% end %>

