<% if can?(:edit, @service) || can?(:destroy, @service) %>
  <% content_for :actions do %>
    <% if can? :edit, @service %>
      <li class='edit'>
        <%= link_to edit_team_server_service_path(@team,@server,@service) do %>Edit<i class="icon-plus"></i><% end %>
      </li>
    <% end %>
    <% if can? :destroy, @service %>
      <li class='destroy'>
        <%= link_to team_server_service_path(@team,@server,@service), method: :delete, data: { confirm: 'Please Confirm' } do %>Delete<i class="icon-warning-sign"></i><% end %>
      </li>
    <% end %>
  <% end %>
<% end %>

<% content_for :resources do %>
  <li class='resource'>
    <%= link_to team_server_service_checks_path(@team,@server,@service) do %>Checks<i class="icon-chevron-right"></i><% end %>
  </li>
  <li class='resource'>
    <%= link_to team_server_service_users_path(@team,@server,@service) do %>Users<i class="icon-chevron-right"></i><% end %>
  </li>
  <li class='resource'>
    <%= link_to team_server_service_properties_path(@team,@server,@service) do %>Properties<i class="icon-chevron-right"></i><% end %>
  </li>
<% end %>

<% content_for :paths do %>
  <li class='path'>
    <%= link_to teams_path do %><span>Teams</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_path(@team) do %><span><%= @team.alias %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path'>
    <%= link_to team_servers_path(@team) do %><span>Servers</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_server_path(@team,@server) do %><span><%= @server.name %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path'>
    <%= link_to team_server_services_path(@team,@server) do %><span>Services</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_server_service_path(@team,@server,@service) do %><span><%= @service.name %></span><i class="icon-chevron-left"></i><% end %>
  </li>
<% end %>


<div class="page-header">
  <h3><%= @service.name %></h3>
</div>

<div class="table-dl-horizontal">
  <table>
    <tr>
      <td>Name:</td>
      <td><%= @service.name %></td>
    </tr>
    <tr>
      <td>Protocol:</td>
      <td><%= @service.protocol %></td>
    </tr>
    <tr>
      <td>Version:</td>
      <td><%= @service.version %></td>
    </tr>
    <tr>
      <td>Enabled:</td>
      <td><%= @service.enabled %></td>
    </tr>
    <tr>
      <td>Available Points:</td>
      <td><%= @service.available_points %></td>
    </tr>
  </table>
</div>

<div class="page-header">
  <h3>Properties</h3>
</div>
<%= render partial: 'properties/service' %>

<div class="page-header">
  <h3>Users</h3>
</div>
<%= render partial: 'users/service' %>

<%= render partial: 'checks/service', locals: { service: @service } %>
<%= render partial: 'checks/modal' %>
