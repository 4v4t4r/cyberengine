<%= form_for [@team,@service], html: { class: 'form-horizontal' } do |f| %>
  <% if @service.errors.any? %>
    <% flash[:error] = @service.errors.full_messages.to_s %>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'text_field', autofocus: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :protocol, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :protocol, class: 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :version, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :version, class: 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :enabled, class: 'control-label' %>
    <div class="controls">
      <% if @service.enabled == true %>
        <%= f.check_box :enabled, class: 'check_box', checked: true %>
      <% else %>
        <%= f.check_box :enabled, class: 'check_box' %>
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :points, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :points, class: 'text_field', value: 10 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :team_id, class: 'control-label' %>
    <div class="controls">
      <%= select(:service, :team_id, [[@team.alias, @team.id]] ) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :server_id, class: 'control-label' %>
    <div class="controls">
      <%= select(:service, :server_id, Server.where(team_id: @team.id).collect { |s| [s.name, s.id] }, { prompt: 'Select Server' }) %>
    </div>
  </div>

<% end %>
