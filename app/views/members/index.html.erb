<% content_for :actions do %>
  <li class="new"> 
    <%= link_to new_member_path do %><i class="icon-plus-sign"></i><span>New Member</span><% end %>
  </li>
<% end %>  


<div class="page-header">
  <h3>Members</h3>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Team</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.username, member_path(member) %></td>
        <td><%= link_to member.team.alias, team_path(member.team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

