<% content_for :actions do %>
  <li class='submit'>
    <%= link_to '#', onclick: "$('#edit_member_#{@member.id}').trigger('submit')" do %><i class="icon-ok-sign"></i><span>Update</span><% end %>
  </li>
  <li class='cancel'>
    <%= link_to members_path do %><i class="icon-ban-circle"></i><span>Cancel</span><% end %>
  </li>
<% end %>

<% content_for :paths do %>
  <li class='path indent'>
    <%= link_to member_path(@member) do %><span>Member: <%= @member.username %></span><i class="icon-chevron-left"></i><% end %>
  </li>
<% end %>


<div class="page-header">
  <h3><%= @member.username %></h3>
</div>

<%= render partial: 'form' %>
