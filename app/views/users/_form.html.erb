<%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <% flash[:error] = @user.errors.full_messages.to_s %>
  <% end %>

  <div class="control-group">
    <%= f.label :username, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, class: 'text_field', autofocus: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :password, class: 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :service_id, class: 'control-label' %>
    <div class="controls">
      <%= select(:user, :service_id, Service.all.collect { |s| ["#{s.server.team.alias}: #{s.server.name}: #{s.name}", s.id] }, { prompt: 'Select Service' }) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', users_path, class: 'btn' %>
  </div>
<% end %>

