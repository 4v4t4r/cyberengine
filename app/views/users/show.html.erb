<% content_for :header do "User #{@user.username}" end %>

<% if can?(:edit, @user) || can?(:destroy, @user) %>
  <% content_for :actions do %>
    <% if can? :edit, @user %>
      <li class='edit'>
        <%= link_to edit_team_server_service_user_path(@team,@server,@service,@user) do %>Edit<i class="icon-plus"></i><% end %>
      </li>
    <% end %>
    <% if can? :destroy, @user %>
      <li class='destroy'>
        <%= link_to team_server_service_user_path(@team,@server,@service,@user), method: :delete, data: { confirm: 'Please Confirm' } do %>Delete<i class="icon-warning-sign"></i><% end %>
      </li>
    <% end %>
  <% end %>
<% end %>

<% content_for :crumbs do %>
  <li class='crumb'>
    <%= link_to team_path(@team) do %>Team<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_servers_path(@team) do %>Servers<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_path(@team,@server) do %><span>Vanguard</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_services_path(@team,@server) do %>Services<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_service_path(@team,@server,@service) do %><span><%= @service.name %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_service_users_path(@team,@server,@service) do %>Users<i class="icon-chevron-left"></i><% end %>
  </li>
<% end %>


<div class="table-dl-horizontal">
  <table>
    <tr>
      <td>Username:</td>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><%= @user.password %></td>
    </tr>
  </table>
</div>
