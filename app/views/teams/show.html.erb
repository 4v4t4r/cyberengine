<% if @team.can_edit?(current_member,@team.id) || @team.can_destroy?(current_member,@team.id) || Server.can_new?(current_member,@team.id) %>
  <% content_for :actions do %>
    <% if @team.can_edit?(current_member,@team.id) %>
      <li class='edit'>
        <%= link_to edit_team_path(@team) do %><i class="icon-plus"></i><span>Edit</span><% end %>
      </li>
    <% end %>
    <% if @team.can_destroy?(current_member,@team.id) %>
      <li class='destroy'>
        <%= link_to team_path(@team), method: :delete, data: { confirm: 'Please Confirm' } do %><i class="icon-warning-sign"></i><span>Delete</span><% end %>
      </li>
    <% end %>
    <% if Server.can_new?(current_member,@team.id) %>
      <li class="new">
        <%= link_to new_team_server_path(@team) do %><i class="icon-plus-sign"></i><span>New Server</span><% end %>
      </li>
    <% end %>
  <% end %>
<% end %>


<div class="page-header">
  <h3><%= @team.alias %></h3>
</div>


<div class="table-dl-horizontal">
  <table>
    <tr>
      <td>Alias:</td>
      <td><%= @team.alias %></td>
    </tr>
    <tr>
      <td>Name:</td>
      <td><%= @team.name %></td>
    </tr>
  </table>
</div>

<div class="page-header">
  <h3>Servers</h3>
</div>

<%= render partial: 'servers/team', locals: { team: @team } %>

