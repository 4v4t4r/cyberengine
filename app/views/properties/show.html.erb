<% if can?(:edit, @property) || can?(:destroy, @property) %>
  <% content_for :actions do %>
    <% if can? :edit, @property %>
      <li class='edit'>
        <%= link_to edit_team_server_service_property_path(@team,@server,@service,@property) do %>Edit<i class="icon-plus"></i><% end %>
      </li>
    <% end %>
    <% if can? :destroy, @property %>
      <li class='destroy'>
        <%= link_to team_server_service_property_path(@team,@server,@service,@property), method: :delete, data: { confirm: 'Please Confirm' } do %>Delete<i class="icon-warning-sign"></i><% end %>
      </li>
    <% end %>
  <% end %>
<% end %>

<% content_for :paths do %>
  <li class='path'>
    <%= link_to teams_path do %><span>Teams</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_path(@team) do %><span><%= @team.alias %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path'>
    <%= link_to team_servers_path(@team) do %><span>Servers</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_server_path(@team,@server) do %><span><%= @server.name %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path'>
    <%= link_to team_server_services_path(@team,@server) do %><span>Services</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_server_service_path(@team,@server,@service) do %><span><%= @service.name %></span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path'>
    <%= link_to team_server_service_users_path(@team,@server,@service) do %><span>Properties</span><i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='path indent'>
    <%= link_to team_server_service_check_path(@team,@server,@service,@property) do %><span><%= @property.category %></span><i class="icon-chevron-left"></i><% end %>
  </li>
<% end %>


<div class="page-header">
  <h3><%= @property.category %><h3>
</div>

<div class="table-dl-horizontal">
  <table>
    <tr>
      <td>Category:</td>
      <td><%= @property.category %></td>
    </tr>
    <tr>
      <td>Property:</td>
      <td><%= @property.property %></td>
    </tr>
    <tr>
      <td>Value:</td>
      <td><%= @property.value %></td>
    </tr>
  </table>
</div>
