<% content_for :header do "#{@service.name} Checks" end %>

<% if can? :new, Check %>
  <% content_for :actions do %>
    <% if can? :new, Check %>
      <li class="new"> 
        <%= link_to new_team_server_service_check_path(@team,@server,@service) do %>New Check<i class="icon-plus-sign"></i><% end %>
      </li>
    <% end %>  
  <% end %>  
<% end %> 

<% content_for :crumbs do %>
  <li class='crumb'>
    <%= link_to team_path(@team) do %>Team<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_servers_path(@team) do %>Servers<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_path(@team,@server) do %>Server<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_services_path(@team,@server) do %>Services<i class="icon-chevron-left"></i><% end %>
  </li>
  <li class='crumb'>
    <%= link_to team_server_service_path(@team,@server,@service) do %>Service<i class="icon-chevron-left"></i><% end %>
  </li>
<% end %>


<% service = @service if @service %>
<% latest = service.checks.latest %>
<% checks = service.checks.order('created_at DESC') %>

<% if latest.nil? %>
  <p>No checks</p>
<% else %>

  <div class="page-header">
    <h3>Latest Check</h3>
  </div>

  <div class="table-dl-horizontal">
    <table>
      <tr>
        <td>Passed:</td>
        <% if latest.passed %>
          <td><span class="label label-success"><%= latest.passed %></span></td>
        <% else %>
          <td><span class="label label-important"><%= latest.passed %></span></td>
        <% end %>
      </tr>
      <tr>
        <td>Request:</td>
        <td><%= latest.request %></td>
      </tr>
      <tr>
        <td>Response:</td>
        <td><%= latest.response %></td>
      </tr>
    </table>
  </div>

  <div class="page-header">
    <h3>All Checks</h3>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Created At</th>
        <th>Passed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if checks.count == 0 %>
        <tr>
          <td colspan="3">No Checks</td>
        </tr>
      <% else %>
        <% checks.each do |check| %>
          <% icon_class = case check.passed when true then "icon-ok success"; when false then "icon-remove error"; else "icon-minus info" end %>
          <% icon_text = case check.passed when true then "True"; when false then "False"; else "No Checks" end %>
          <tr>
            <td><%= check.created_at %></td>
            <td>
              <%= link_to modal_team_server_service_check_path(@team,@server,@service,check), data: { toggle: "modal", target: "#checksModal" } do %>
                <i class="<%= icon_class %>"><span><%= icon_text %></span></i>
              <% end %>
            </td>
            <td>
              <%= link_to 'Show', team_server_service_check_path(@team,@server,@service,check), class: 'btn btn-small' if can? :show, check %>
              <%= link_to 'Edit', edit_team_server_service_check_path(@team,@server,@service,check), class: 'btn btn-small' if can? :edit, check %>
              <%= link_to 'Delete', team_server_service_check_path(@team,@server,@service,check), method: :delete, class: 'btn btn-small btn-danger', data: { confirm: 'Please Confirm' } if can? :destroy, check %>
            </td>

          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
<% end %>

<%= render partial: 'modal' %>
